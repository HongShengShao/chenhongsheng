<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="御泥坊VIP商城"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/information_centre"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/xBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:AutoPlayTime="3000"
                app:pointNormal="@drawable/point_xbanner_image_normal"
                app:pointSelect="@drawable/point_xbanner_image_select"
                app:pointLeftRightPadding="5dp"
                app:pointsPosition="RIGHT"
                android:layout_marginTop="10dp"
                >
            </com.stx.xhb.xbanner.XBanner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >
                <ImageView
                    android:id="@+id/EveryDay_Sign_In_image"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginLeft="35dp"
                    />
                <TextView
                    android:id="@+id/EveryDay_Sign_In_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/EveryDay_Sign_In_image"
                    android:layout_alignLeft="@id/EveryDay_Sign_In_image"
                    android:layout_marginLeft="15dp"
                    android:textSize="10sp"
                    />
                <ImageView
                    android:id="@+id/Integral_Store_image"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_toRightOf="@id/EveryDay_Sign_In_image"
                    android:layout_marginLeft="35dp"
                    />
                <TextView
                    android:id="@+id/Integral_Store_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Integral_Store_image"
                    android:layout_toRightOf="@id/EveryDay_Sign_In_text"
                    android:layout_alignLeft="@id/Integral_Store_image"
                    android:layout_marginLeft="15dp"
                    android:textSize="10sp"
                    />
                <ImageView
                    android:id="@+id/Exchange_Prefecture_image"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_toRightOf="@id/Integral_Store_image"
                    android:layout_marginLeft="35dp"
                    />
                <TextView
                    android:id="@+id/Exchange_Prefecture_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Exchange_Prefecture_image"
                    android:layout_toRightOf="@id/Integral_Store_text"
                    android:layout_alignLeft="@id/Exchange_Prefecture_image"
                    android:layout_marginLeft="15dp"
                    android:textSize="10sp"
                    />
                <ImageView
                    android:id="@+id/True_and_False_image"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_toRightOf="@id/Exchange_Prefecture_image"
                    android:layout_marginLeft="35dp"
                    />
                <TextView
                    android:id="@+id/True_and_False_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/True_and_False_image"
                    android:layout_toRightOf="@id/Exchange_Prefecture_text"
                    android:layout_alignLeft="@id/True_and_False_image"
                    android:layout_marginLeft="15dp"
                    android:textSize="10sp"
                    />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_springtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                />

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/horizontalScrollView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scrollbars="none"
            >
            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/lineaLayout"
            android:layout_width="match_parent"
            android:layout_height="2650dp"
            android:orientation="vertical"
            >
            <ListView
                android:id="@+id/Home_page_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>
        
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:numColumns="2"
            >
        </GridView>

    </LinearLayout>

</ScrollView>