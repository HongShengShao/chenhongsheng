<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="280dp"
    android:layout_marginTop="5dp"
    >

<ImageView
    android:id="@+id/image_myclassifygridviewadapter"
    android:layout_width="210dp"
    android:layout_height="190dp"
    />
    <TextView
        android:id="@+id/textView_myclassifygridviewadapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/textView_myclassifygridviewadapter_jieshao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/textView_myclassifygridviewadapter_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/textView_myclassifygridviewadapter_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#808080"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

</LinearLayout>