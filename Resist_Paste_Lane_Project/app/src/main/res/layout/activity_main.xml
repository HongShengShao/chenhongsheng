<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></FrameLayout>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/radioButton_home_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="首页"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/point_home_page"
                android:textColor="@drawable/point_text_color"
                />

            <RadioButton
                android:id="@+id/radioButton_classify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="分类"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/point_classify"
                android:textColor="@drawable/point_text_color"
                />

            <RadioButton
                android:id="@+id/radioButton_shopping_cart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="购物车"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/point_shopping_cart"
                android:textColor="@drawable/point_text_color"
                />

            <RadioButton
                android:id="@+id/radioButton_my"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:text="我的"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/point_my"
                android:textColor="@drawable/point_text_color"
                />

        </RadioGroup>

</LinearLayout>
