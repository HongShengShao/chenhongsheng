<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:id="@+id/listViewMoreItem_right_image"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:src="@mipmap/a"
        />

    <TextView
        android:id="@+id/listViewMoreItem_right_image_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/listViewMoreItem_right_image"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="标题"
        />

    <TextView
        android:id="@+id/listViewMoreItem_right_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewMoreItem_right_image"
        android:textSize="15sp"
        android:text="作者"
        />

    <ImageView
        android:id="@+id/listViewMoreItem_right_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/uncollect"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/listViewMoreItem_right_author"
        android:layout_marginRight="50dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shared_item"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/listViewMoreItem_right_author"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>